---
import Badge from "../components/Badge.astro";
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
---

<Layout
  title="Design System porfolio.dev"
  description="El catalogo de componentes"
>
  <SectionContainer class="py-44 pd-32 flex flex-col gap-y-10">
    <article class="mb-10 text-xl font-semibold">
      <h1 class="mb-4">&lt;Badge&gt;</h1>

      <Badge>Desarrollador Web</Badge>
    </article>

    <article class="mb-10">
      <h1 class="mb-4 text-xl font-semibold">&lt;SocialPill&gt;</h1>

      <div class="flex">
        <SocialPill
          href="https://www.linkedin.com/in/antonio-borges-714383254/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
      </div>
    </article>
  </SectionContainer>
</Layout>
